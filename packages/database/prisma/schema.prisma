generator client {
  provider        = "prisma-client"
  output          = "../generated/prisma"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  extensions = [postgis]
}

model SellerDocuments {
  id        String   @id @default(cuid())
  aadhar    String   @db.VarChar(12)
  pancard   String   @db.VarChar(10)
  gst       String?  @db.VarChar(15)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  storeId   Int      @unique
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([aadhar, pancard, gst, userId])
  @@map("sellerdocuments")
}

model BankDetail {
  id             String @id @default(uuid())
  name           String
  account_number String
  ifsc_code      String
  bank_name      String
  branch         String
  userId         String
  storeId        Int    @unique
  store          Store  @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map("bankdetails")
}

model Store {
  id                    Int              @id @default(autoincrement())
  shop_name             String
  categoryId            String
  home_delivery         Boolean?         @default(false)
  isActive              Boolean?         @default(true)
  userId                String
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @default(now()) @updatedAt
  delivery_charge       Int?             @default(0)
  free_delivery_after   Int?             @default(0)
  handling_charge       Int?             @default(0)
  razorpayAccountId     String?          @unique
  razorpayAccountStatus String?
  address               Address?
  bankDetails           BankDetail?
  product               Product[]
  sellerDocuments       SellerDocuments?
  category              Category         @relation(fields: [categoryId], references: [id])

  @@map("store")
}

model Address {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(50)
  contact   String   @db.VarChar(13)
  address   String   @db.VarChar(100)
  city      String   @db.VarChar(100)
  state     String   @db.VarChar(100)
  pincode   String   @db.VarChar(6)
  landmark  String?  @db.VarChar(50)
  userId    String
  storeId   Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  country   String   @default("India") @db.VarChar(100)
  district  String   @default("gorakhpur") @db.VarChar(100)
  lat       Float    @default(0)
  long      Float    @default(0)

  geohash     String? // For geohash-based caching
  coordinates Unsupported("geography(Point, 4326)")?
  store       Store                                  @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@index([lat, long]) // NEW - Index for fallback queries
  @@index([geohash])
  @@map("address")
}

model Product {
  id          Int        @id @default(autoincrement())
  title       String     @db.VarChar(100)
  description String
  categoryId  String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now()) @updatedAt
  storeId     Int
  userId      String
  carts       Cart[]
  category    Category   @relation(fields: [categoryId], references: [id])
  Store       Store      @relation(fields: [storeId], references: [id], onDelete: Cascade)
  variants    Variants[]

  @@map("product")
}

model Variants {
  id            String         @id @default(uuid())
  selling_price Decimal
  stock         Int
  sku           String
  mrp           Decimal
  unit          String
  unit_value    String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now()) @updatedAt
  productId     Int
  carts         Cart[]
  prod_img      ProductImage[]
  Product       Product        @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("variants")
}

model ProductImage {
  id                String   @id @default(uuid())
  original_filename String   @default("default.png")
  bytes             Int      @default(0)
  url               String
  publicId          String
  variantId         String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now()) @updatedAt
  Variant           Variants @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@map("productimage")
}

model Cart {
  id        String   @id @default(uuid())
  userId    String
  productId Int
  quantity  Int
  variantId String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant   Variants @relation(fields: [variantId], references: [id])

  @@unique([userId, productId, variantId])
  @@map("cart")
}

model Category {
  id                String    @id @default(uuid())
  name              String    @unique @db.VarChar(500)
  publicId          String
  userId            String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @default(now()) @updatedAt
  bytes             Int       @default(0)
  original_filename String    @default("default.png")
  url               String
  products          Product[]
  stores            Store[]

  @@map("category")
}

model Order {
  id              String      @id @default(uuid())
  userId          String
  razorpayOrderId String
  amount          Int
  status          OrderStatus @default(PENDING)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @default(now()) @updatedAt
  orderItems      OrderItem[]

  @@map("order")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  productId Int
  quantity  Int
  variantId String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@unique([orderId, productId, variantId])
  @@map("order_item")
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
}
