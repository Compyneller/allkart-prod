generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model SellerDocuments {
  id        String   @id @default(cuid())
  aadhar    String   @db.VarChar(12)
  pancard   String   @db.VarChar(10)
  gst       String?  @db.VarChar(15)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  storeId   Int      @unique
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([aadhar, pancard, gst, userId])
  @@map("sellerdocuments")
}

model BankDetail {
  id             String @id @default(uuid())
  name           String
  account_number String
  ifsc_code      String
  bank_name      String
  branch         String
  userId         String
  storeId        Int    @unique
  store          Store  @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map("bankdetails")
}

model Store {
  id                    Int              @id @default(autoincrement())
  shop_name             String
  categoryId            String
  category              Category         @relation(fields: [categoryId], references: [id])
  home_delivery         Boolean?         @default(false)
  handling_charge       Int?             @default(0)
  delivery_charge       Int?             @default(0)
  free_delivery_after   Int?             @default(0)
  isActive              Boolean?         @default(true)
  userId                String
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @default(now()) @updatedAt
  product               Product[]
  address               Address?
  razorpayAccountId     String?          @unique
  razorpayAccountStatus String?
  sellerDocuments       SellerDocuments?
  bankDetails           BankDetail?

  @@map("store")
}

model Address {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(50)
  contact   String   @db.VarChar(13)
  address   String   @db.VarChar(100)
  city      String   @db.VarChar(100)
  state     String   @db.VarChar(100)
  pincode   String   @db.VarChar(6)
  lat       Float    @default(0)
  long      Float    @default(0)
  country   String   @default("India") @db.VarChar(100)
  district  String   @default("gorakhpur") @db.VarChar(100)
  landmark  String?  @db.VarChar(50)
  userId    String
  storeId   Int      @unique
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("address")
}

model Product {
  id          Int        @id @default(autoincrement())
  title       String     @db.VarChar(100)
  description String
  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now()) @updatedAt
  storeId     Int
  Store       Store      @relation(fields: [storeId], references: [id], onDelete: Cascade)
  userId      String
  variants    Variants[]
  carts       Cart[]

  @@map("product")
}

model Variants {
  id            String         @id @default(uuid())
  selling_price Decimal
  stock         Int
  sku           String
  mrp           Decimal
  unit          String
  unit_value    String
  prod_img      ProductImage[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now()) @updatedAt
  productId     Int
  Product       Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  carts         Cart[]
}

model ProductImage {
  id                String   @id @default(uuid())
  original_filename String   @default("default.png")
  bytes             Int      @default(0)
  url               String
  publicId          String
  variantId         String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now()) @updatedAt
  Variant           Variants @relation(fields: [variantId], references: [id], onDelete: Cascade)
}

model Cart {
  id        String   @id @default(uuid())
  userId    String
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int
  variantId String
  variant   Variants @relation(fields: [variantId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([userId, productId, variantId])
  @@map("cart")
}

model Category {
  id                String    @id @default(uuid())
  name              String    @unique @db.VarChar(500)
  original_filename String    @default("default.png")
  bytes             Int       @default(0)
  url               String
  publicId          String
  userId            String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @default(now()) @updatedAt
  products          Product[]
  stores            Store[]

  @@map("category")
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
}

model Order {
  id              String      @id @default(uuid())
  userId          String
  razorpayOrderId String
  amount          Int
  status          OrderStatus @default(PENDING)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @default(now()) @updatedAt
  orderItems      OrderItem[]

  @@map("order")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId Int
  quantity  Int
  variantId String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([orderId, productId, variantId])
  @@map("order_item")
}
